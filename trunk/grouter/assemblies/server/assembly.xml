<!--
Assembly descriptor for the full Mule distribution.
-->
<assembly>
  <id>full</id>
  <formats>
    <format>dir</format>
    <!-- format>tar.gz</format -->
  </formats>

  <fileSets>
    <fileSet>
      <directory>./src/main/resources</directory>
      <outputDirectory></outputDirectory>
    </fileSet>

    <!-- Make binary directories executable. -->
    <fileSet>
      <directory>./src/main/resources/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>755</fileMode>
    </fileSet>
	
	<!-- binaries for different platforms -->
    <fileSet>
      <directory>./src/main/resources/sbin</directory>
      <outputDirectory>sbin</outputDirectory>
      <fileMode>755</fileMode>
    </fileSet>

    <fileSet>
      <directory>./src/main/resources/boot</directory>
      <outputDirectory>boot</outputDirectory>
      <fileMode>755</fileMode>
    </fileSet>

    <fileSet>
      <directory>./src/main/resources/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>755</fileMode>
      <includes>
          <include>*.txt</include>
      </includes>
    </fileSet>
    
    <!-- Copy the USAGE.txt file to the root directory for visibility -->
    <fileSet>
      <directory>./src/main/resources/bin</directory>
      <outputDirectory></outputDirectory>
      <includes>
          <include>USAGE.txt</include>
      </includes>
    </fileSet>

    <!-- Copy javadocs ("mvn site:site" must have been run previously) -->
    <!-- fileSet>
      <directory>../../../target/site/apidocs</directory>
      <outputDirectory>docs/api</outputDirectory>
    </fileSet -->

      
  </fileSets>

    <!--
    ============================
        Libraries
    ============================
    -->
      <dependencySets>

    
     <!-- Mule libraries -->
    <dependencySet>
      <outputDirectory>lib/grouter</outputDirectory>
      <!-- outputFileNameMapping>${artifactId}.${extension}</outputFileNameMapping -->
      <scope>runtime</scope>
      <includes>
        <!-- Core -->
        <!-- include>org.grouter.platform.core:core-router</include -->
        <!-- Transports -->
        <!-- Modules -->
        <!-- Tools -->
      </includes>
      <!-- no XML -->
      <excludes>
          <exclude>xml-apis:xml-apis</exclude>
          <exclude>xerces:xercesImpl</exclude>
      </excludes>
    </dependencySet>
 </dependencySets>
</assembly>
