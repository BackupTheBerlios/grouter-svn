<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
       default-autowire="byName">

  <!-- Client configuration -->
  <bean id="routerServiceProxy" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
    <property name="serviceUrl">
      <value>rmi://localhost:4005/RouterService</value>
    </property>
    <property name="serviceInterface">
      <value>org.grouter.domain.servicelayer.RouterService</value>
    </property>
  </bean>



  <bean id="routerServiceClient" class="org.grouter.core.GRouterServerAdapter">
    <property name="routerServiceProxy">
      <ref local="routerServiceProxy"/>
    </property>
  </bean>

</beans>
