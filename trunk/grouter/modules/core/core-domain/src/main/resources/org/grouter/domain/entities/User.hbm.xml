<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="org.grouter.domain.entities.User" table="user">
    <id name="id" unsaved-value="null">
      <generator class="native" />
    </id>

    <property name="userName" column="username" />
    <property name="password" column="pwd"/>
    <property name="firstName" column="firstname" />
    <property name="lastName" column="lastname" />
    <property name="deleted" />

    <many-to-one name="address" column="address_fk" cascade="all" class="org.grouter.domain.entities.Address"
      not-null="false"   fetch="join"  lazy="false" />

    <many-to-one name="createdBy" column="createdby" class="org.grouter.domain.entities.User" not-null="false" />
    
    <set name="roles" inverse="true" cascade="delete-orphan" lazy="false" fetch="join" table="user_role" >
      <key column="user_id" />
      <one-to-many class="org.grouter.domain.entities.UserRole" />
    </set>
  </class>
</hibernate-mapping>