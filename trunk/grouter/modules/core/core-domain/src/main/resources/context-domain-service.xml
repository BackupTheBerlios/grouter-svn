<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="
  http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
  http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
  http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd"
       default-autowire="byName">


  <!-- This declaratino together with the context-domain-aop.xml context should do
       the AOP style does not work currently - a lot of dependencies to cglib, asm etc
       are messing things up

  <bean id="grouterService" class="org.grouter.domain.servicelayer.spring.GRouterServiceImpl"/>
  -->


  <bean id="logStrategy" class="org.grouter.domain.servicelayer.spring.logging.JDBCLogStrategyImpl"/>

  <bean id="serviceFactory" class="org.grouter.domain.servicelayer.BeanLocator"/>


  <!-- ########################################################### -->
  <!-- The "old" way of setting up it without the aop config style -->
  <!-- ########################################################### -->

  <!--  RouterService Proxy -->
  <bean id="routerService"  class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="proxyInterfaces">
      <value>org.grouter.domain.servicelayer.RouterService</value>
    </property>
    <property name="interceptorNames">
      <list>
        <idref local="transactionInterceptor"/>
        <idref local="routerServiceTarget"/>
      </list>
    </property>
  </bean>


  <!-- RouterService Target -->
  <bean id="routerServiceTarget" name="grouterServiceTarget"
        class="org.grouter.domain.servicelayer.spring.RouterServiceImpl">
    <property name="messageDAO" ref="messageDAO"/>
    <property name="nodeDAO" ref="nodeDAO"/>
  </bean>



  <!--  JobService Proxy -->
  <bean id="jobService"  class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="proxyInterfaces">
      <value>org.grouter.domain.servicelayer.JobService</value>
    </property>
    <property name="interceptorNames">
      <list>
        <idref local="transactionInterceptor"/>
        <idref local="jobServiceTarget"/>
      </list>
    </property>            
  </bean>


  <!-- JobService Target -->
  <bean id="jobServiceTarget" class="org.grouter.domain.servicelayer.spring.JobServiceImpl">
    <property name="jobDAO" ref="jobDAO"/>
  </bean>


  <!-- UserService Proxy -->
  <bean id="userService"  class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="proxyInterfaces">
      <value>org.grouter.domain.servicelayer.UserService</value>
    </property>
    <property name="interceptorNames">
      <list>
        <idref local="transactionInterceptor"/>
        <idref local="userServiceTarget"/>
      </list>
    </property>
  </bean>
                                   

  <!-- Grouter Service Target -->
  <bean id="userServiceTarget" class="org.grouter.domain.servicelayer.spring.UserServiceImpl">
    <property name="userDAO" ref="userDAO"/>
  </bean>


  <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
    <property name="sessionFactory" ref="sessionFactory"/>
  </bean>


  <!-- Service Transaction Interceptor -->
  <bean id="transactionInterceptor" class="org.springframework.transaction.interceptor.TransactionInterceptor">
    <property name="transactionManager" ref="transactionManager"/>
    <property name="transactionAttributeSource">
      <value>
        org.grouter.domain.servicelayer.RouterService.*=PROPAGATION_REQUIRED
        org.grouter.domain.servicelayer.UserService.*=PROPAGATION_REQUIRED
        org.grouter.domain.servicelayer.JobService.*=PROPAGATION_REQUIRED
        org.grouter.domain.servicelayer.spring.RouterQueueListenerImpl.process*=PROPAGATION_REQUIRED
      </value>
    </property>
  </bean>

</beans>