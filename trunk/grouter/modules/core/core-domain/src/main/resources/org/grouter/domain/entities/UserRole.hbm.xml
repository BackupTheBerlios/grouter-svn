<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

  <class name="org.grouter.domain.entities.UserRole" table="user_role">
    <cache usage="read-write"/>
    <id name="id">
      <generator class="native"/>
    </id>

    <many-to-one
            name="user"
            column="user_id"
            class="com.eniro.classifieds.data.model.User"
            not-null="true"/>

    <many-to-one
            name="role"
            column="role_id"
            class="com.eniro.classifieds.data.model.Role"
            not-null="true"/>

  </class>
</hibernate-mapping>