<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
  http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
       default-autowire="byName">

  <bean class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping">
    <property name="interceptors">
      <list>
      </list>
    </property>
  </bean>

  <bean name="/message/list.do" class="org.grouter.presentation.controller.message.MessageListController" />
  <bean name="/node/list.do" class="org.grouter.presentation.controller.node.NodeListController" />
  <bean name="/user/edit.do" class="org.grouter.presentation.controller.user.UserEditController" />
  <bean name="/grouter/select.do" class="org.grouter.presentation.controller.router.GrouterSelectController"/>


  <bean name="/security/*.do" class="org.grouter.presentation.controller.security.SecurityController">
    <property name="login" value="login/login"/>
    <property name="logedOut" value="login/logedoOut"/>
    <property name="loginDenied" value="login/loginDenied"/>
  </bean>

  <!-- Config for JSP/JSTL -->
  <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="prefix" value="/faces/"/>
    <property name="suffix" value=".jsp"/>
    <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
  </bean>

   <!-- DWR -->
  <bean name="/**/*" class="org.springframework.web.servlet.mvc.ServletWrappingController">
    <property name="servletClass" value="uk.ltd.getahead.dwr.DWRServlet"/>
    <property name="initParameters">
      <props>
        <prop key="debug">true</prop>
      </props>
    </property>
  </bean>
  


</beans>