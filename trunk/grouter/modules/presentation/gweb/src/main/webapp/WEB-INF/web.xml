   </servlet-mapping -->

    <!--
    All .do urls goes to gweb context
    -->
    <servlet-mapping>
        <servlet-name>gweb</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>gweb</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>
    
