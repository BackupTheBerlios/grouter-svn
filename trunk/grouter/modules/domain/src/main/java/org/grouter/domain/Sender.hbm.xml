<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="org.grouter.domain.Sender" table="SENDER">
        <id column="SENDERID" name="id" type="java.lang.String">
            <generator class="uuid"/>
        </id>
        <!-- Options for caching : "transactional|read-write|nonstrict-read-write|read-only -->
        <!-- cache usage="read-only" / -->
        <property name="name" not-null="false" type="java.lang.String" column="MESSAGE"/>

        <!--
            The key element is the name of the foreign key in the MESSAGE table (the
            parent's id or in this case the Senders id).
            The one-to-many element is the class name of other side of the raltionships (the
            child class name).

            Tables:
                 MESSAGE
                 ID     NAME     CREATIONTIME       SENDERID_FK
            
                 SENDER
                 ID     NAME
         -->
        <set name="messages" cascade="all" lazy="true" inverse="true" table="MESSAGE">
            <key>
                <column name="SENDERID" not-null="true"/>
            </key>
            <one-to-many class="org.grouter.domain.Message"/>
        </set>

        <!--set name="books" inverse="false" >
			<key>
				<column name="customer_fk"></column>
			</key>
			<one-to-many class="Book" />
		</set-->

    </class>
</hibernate-mapping>
