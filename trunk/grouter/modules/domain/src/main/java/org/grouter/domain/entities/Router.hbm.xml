<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
  <class name="org.grouter.domain.entitylayer.Router" table="ROUTER">
    <id column="ID" name="id" type="java.lang.String">
      <generator class="uuid"/>
    </id>
    <property name="startedOn" not-null="false" type="timestamp" column="STARTEDON"/>
    <property name="name" not-null="false" type="java.lang.String" column="NAME"/>
    <property name="upTime" not-null="false" type="java.lang.Long" column="UPTIME"/>

    <set name="nodes" cascade="all" lazy="true" inverse="true" table="NODE">
      <key>
        <column name="NODE_ID" not-null="true"/>
      </key>
      <one-to-many class="org.grouter.domain.entitylayer.Node"/>
    </set>


  </class>
</hibernate-mapping>
