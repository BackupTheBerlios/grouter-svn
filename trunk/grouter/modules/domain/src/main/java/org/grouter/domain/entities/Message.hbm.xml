<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="org.grouter.domain.entities.Message" table="MESSAGE">
        <id column="MESSAGE_ID" name="id" type="java.lang.String">
            <generator class="uuid"/>
        </id>
        <property name="creationTimestamp" not-null="false" type="timestamp" column="CREATIONTIMESTAMP"/>
        <property name="message" not-null="false" type="java.lang.String" column="MESSAGE"/>

        <!--set name="receivers" table="RECEIVER_MESSAGE" inverse="true" lazy="true" cascade="all">
            <key column="MESSAGEID"/>
            <many-to-many class="org.grouter.domain.entities.Receiver" column="RECEIVERID"/>
        </set-->


        <set name="receivers" cascade="all" lazy="true" inverse="true" table="RECEIVER">
            <key>
                <column name="RECEIVER_ID" not-null="true"/>
            </key>
            <one-to-many class="org.grouter.domain.entities.Receiver"/>
        </set>


        <!-- The column attribute in the many-to-many element is for the FK residing in this
        table from the table SENDER.
        Tables:
                 MESSAGE
                 ID     NAME     CREATIONTIME       SENDERID (FK)
                 SENDER
                 ID     NAME
        -->
        <many-to-one
                name="sender"
                not-null="true"
                class="org.grouter.domain.entities.Sender"
                column="SENDER_FK"
                cascade="save-update,persist">
        </many-to-one>

        <!-- column is for this table -->
        <!--many-to-one
                name="nodeConfig"
                not-null="false"
                class="org.grouter.domain.entities.Node"
                column="NODEID"
                cascade="none">
        </many-to-one-->

        <many-to-one
                name="node"
                not-null="false"
                class="org.grouter.domain.entities.Node"
                column="NODE_FK"
                cascade="none">
        </many-to-one>


    </class>
</hibernate-mapping>
