<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="org.grouter.domain.Node" table="NODE">
        <id column="NODEID" name="id" type="java.lang.String">
            <generator class="uuid"/>
        </id>
        <property name="modifiedOn" not-null="false" type="timestamp" column="MODIFIEDON"/>
        <property name="name" not-null="false" type="java.lang.String" column="NAME"/>

        <set name="messages" cascade="all" lazy="true" inverse="true" table="MESSAGES">
            <key>
                <column name="MESSAGEID" not-null="true"/>
                <!-- id column in other table -->
            </key>
            <one-to-many class="org.grouter.domain.Message"/>
        </set>

        <!-- column is for this table -->
        <many-to-one
                name="modifiedBySystemUser"
                not-null="false"
                class="org.grouter.domain.systemuser.SystemUser"
                column="MODIFIEDBYSYSTEMUSERID"
                cascade="none">
        </many-to-one>
    </class>
</hibernate-mapping>
