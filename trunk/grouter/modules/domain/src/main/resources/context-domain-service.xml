<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
  http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-2.0.xsd" default-autowire="byType">
  <!--
   Proxy to use for a transaction demarcated messageservice. Rollback is only done for
   runtime exceptions - if you need rollback for non runtime exceptions (business exceptions)
   then include them in the service method below.
  -->
  <bean id="abstractTransactionalManager"
        class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
    <property name="transactionManager" ref="transactionManager"/>
    <property name="target" ref="grouterServiceImpl"/>
    <property name="transactionAttributes">
      <props>
        <prop key="createSystemUser">PROPAGATION_REQUIRED</prop>
        <prop key="createMessage">PROPAGATION_REQUIRED</prop>
        <prop key="findSystemUser">PROPAGATION_REQUIRED</prop>
        <prop key="findMessageById">PROPAGATION_REQUIRED</prop>
      </props>
    </property>
  </bean>
  
  <bean id="grouterServiceImpl" parent="abstractTransactionalManager">
    <property name="target">
      <bean class="org.grouter.domain.servicelayer.spring.GRouterServiceImpl">
        <property name="messageDAO" ref="messageDAO"/>
      </bean>
    </property>
  </bean>
</beans>