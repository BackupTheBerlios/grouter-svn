<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
  http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
  default-autowire="byType">

  <!-- Abstract DAO -->
    <bean id="abstractDao" abstract="true">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>


    <!-- Core specific Data Access Object (DAO) Beans -->
    <bean id="messageDAO" parent="abstractDao"  class="org.grouter.domain.daolayer.hibernate.MessageDAOImpl"/>
    <bean id="routerDAO" parent="abstractDao"  class="org.grouter.domain.daolayer.hibernate.RouterDAOImpl"/>

</beans>